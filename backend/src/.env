# Python virtual environment and project dependencies for Fastrax-Price-Change

# Create a virtual environment (Windows)
python -m venv venv

# Activate the environment (Windows)
venv\Scripts\activate

# Install dependencies
pip install flask flask-sqlalchemy selenium selenium-wire

pip install setuptools
pip install blinker==1.0.0

# (Optional) For development and PDF extraction
pip install PyPDF2

# Environment variables (example for .env file)
FLASK_APP=app.py
FLASK_ENV=development
DATABASE_URL=sqlite:///../database/products.db
